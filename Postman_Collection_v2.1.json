          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/orders/ORD-1234567890-123",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "orders", "ORD-1234567890-123"]
            },
            "description": "Retrieve order details by orderId. Replace ORD-1234567890-123 with actual orderId."
          },
