    {
      "name": "PayFast - Two-Step Payment Flow",
      "item": [
        {
          "name": "Step 1: Get Access Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"ORD-1234567890-123\",\n  \"amount\": 750\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/payfast/get-token",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "payfast", "get-token"]
            },
            "description": "STEP 1: Get ACCESS_TOKEN from PayFast Pakistan. Amount must be in integer (PKR)."
          },
          "response": []
        },
        {
          "name": "Step 2: Initialize Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"ORD-1234567890-123\",\n  \"token\": \"PASTE_ACCESS_TOKEN_HERE\",\n  \"email_address\": \"customer@example.com\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/payfast/initialize",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "payfast", "initialize"]
            },
            "description": "STEP 2: Initialize payment form with ACCESS_TOKEN from Step 1. Returns checkoutUrl and formData for PayFast payment gateway."
          },
          "response": []
        }
      ]
    },
    {
      "name": "PayFast - Legacy Redirect (Backward Compatible)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": \"ORD-1234567890-123\",\n  \"token\": \"PASTE_ACCESS_TOKEN_HERE\",\n  \"email_address\": \"customer@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/payfast/redirect",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "payfast", "redirect"]
        },
        "description": "Legacy endpoint (alias for initialize). Kept for backward compatibility."
      },
      "response": []
    },
    {
      "name": "PayFast - Payment Status & Management",
      "item": [
        {
          "name": "Get Payment Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/payfast/status/ORD-1234567890-123",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "payfast", "status", "ORD-1234567890-123"]
            },
            "description": "Get current payment status for an order. Shows all payment attempts and current status."
          },
          "response": []
        },
        {
          "name": "Get All Payments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/payfast/list?status=initiated&limit=50",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "payfast", "list"],
              "query": [
                {
                  "key": "status",
                  "value": "initiated",
                  "disabled": true
                },
                {
                  "key": "orderId",
                  "value": "ORD-1234567890-123",
                  "disabled": true
                }
              ]
            },
            "description": "Get all payments with optional filters. Query params: status (initiated|completed|failed|canceled|pending), orderId (specific order)"
          },
          "response": []
        },
        {
          "name": "Retry Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"ORD-1234567890-123\",\n  \"email_address\": \"customer@example.com\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/payfast/retry",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "payfast", "retry"]
            },
            "description": "Retry payment for a failed order. Generates a new payment link for the customer."
          },
          "response": []
        },
        {
          "name": "Cancel Payment",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/payfast/cancel/ORD-1234567890-123",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "payfast", "cancel", "ORD-1234567890-123"]
            },
            "description": "Cancel payment for a pending or failed order. Only works for non-paid orders."
          },
          "response": []
        },
        {
          "name": "PayFast Callback (IPN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"m_payment_id\": \"ORD-1234567890-123\",\n  \"pf_payment_id\": \"1234567890\",\n  \"payment_status\": \"COMPLETE\",\n  \"email_address\": \"customer@example.com\",\n  \"signature\": \"test_signature\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/payfast/callback",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "payfast", "callback"]
            },
            "description": "Callback endpoint for PayFast server-to-server payment notifications. Called by PayFast after payment processing."
          },
          "response": []
        }
      ]
    }
