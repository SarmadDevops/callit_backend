    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"Ahmed Hassan\",\n  \"userPhone\": \"+923001234567\",\n  \"totalAmount\": 750.00,\n  \"ticketsPurchased\": [\n    {\n      \"eventDay\": 1,\n      \"ticketType\": \"VIP\",\n      \"quantity\": 2,\n      \"names\": [\"Ahmed Hassan\", \"Ali Khan\"],\n      \"price\": 375.00\n    }\n  ]\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/orders/create",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "orders", "create"]
            },
            "description": "Create a new order with ticket details. Returns orderId needed for payment processing."
          },
          "response": []
        },
        {
          "name": "Get All Orders (with Pagination)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/orders?page=1&limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "orders"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Number of orders per page (default: 10)"
                },
                {
                  "key": "paymentStatus",
                  "value": "pending",
                  "disabled": true,
                  "description": "Filter by payment status (pending|paid|canceled|failed) - Optional"
                }
              ]
            },
            "description": "Get all orders with pagination. Supports filtering by payment status. Returns pagination metadata with total count, current page, and next/previous page info."
          },
          "response": []
        },
